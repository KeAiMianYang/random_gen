#ifndef PLAINARRAY_H
#define PLAINARRAY_H

class PlainArray{
 public:
  int* _tab;
  int* _sizes;
  int _dimension;
 public:
  PlainArray(int* sizes, int dimension);
  int get_cell(int*  coordinates);
  void set_cell(int* coordinates, int value);
 protected:
  int get_cell_number(int* coordinates);
};

